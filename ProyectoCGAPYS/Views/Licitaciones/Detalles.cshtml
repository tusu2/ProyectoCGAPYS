@model ProyectoCGAPYS.ViewModels.LicitacionDetalleViewModel

@{
    ViewData["Title"] = "Detalles de la Licitación";

    // Detectamos estados
    bool estaAdjudicada = Model.Estado == "Adjudicada"; // (Por compatibilidad con datos viejos)
    bool enEjecucion = Model.Estado == "Ejecucion";     // El nuevo estado

    // Variable auxiliar para saber si el proceso ya terminó (Ejecución o Adjudicada)
    bool procesoTerminado = estaAdjudicada || enEjecucion;

    string GetStatusClass(string estado)
    {
        switch (estado?.ToLower())
        {
            case "abierta": return "status-abierta";
            case "adjudicada": return "status-adjudicada";
            case "ejecucion": return "status-ejecucion"; // <--- Agregamos estilo para Ejecución
            case "cancelada": return "status-cancelada";
            case "cerrada": return "status-cerrada";
            default: return "status-cerrada";
        }
    }
}
