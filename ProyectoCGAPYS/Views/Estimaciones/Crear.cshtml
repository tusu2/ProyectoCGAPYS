@model EstimacionCrearViewModel
@{
    ViewData["Title"] = "Crear Nueva Estimación";
}

<h2>@ViewData["Title"]</h2>
<h4>Vista del Contratista</h4>
<hr />

<div class="row">
    <div class="col-md-8">

        <form asp-action="Crear" method="post" enctype="multipart/form-data">

            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Datos de la Estimación</legend>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="IdProyectoFk" class="control-label"></label>
                    <select asp-for="IdProyectoFk" class="form-control"
                            asp-items="@Model.ProyectosAsignados">
                        <option value="">-- Seleccione un Proyecto --</option>
                    </select>
                    <span asp-validation-for="IdProyectoFk" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Monto" class="control-label"></label>
                            <input asp-for="Monto" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="FechaEstimacion" class="control-label"></label>
                            <input asp-for="FechaEstimacion" class="form-control" />
                            <span asp-validation-for="FechaEstimacion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Documentos Requeridos</legend>

                <div class="form-group mb-3">
                    <label asp-for="ArchivoNumerosGeneradores" class="form-label"></label>
                    <input asp-for="ArchivoNumerosGeneradores" class="form-control" type="file" accept=".pdf" />
                    <span asp-validation-for="ArchivoNumerosGeneradores" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ArchivoReporteFotografico" class="form-label"></label>
                    <input asp-for="ArchivoReporteFotografico" class="form-control" type="file" accept=".pdf,.zip" />
                    <span asp-validation-for="ArchivoReporteFotografico" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ArchivoBitacora" class="form-label"></label>
                    <input asp-for="ArchivoBitacora" class="form-control" type="file" accept=".pdf" />
                    <span asp-validation-for="ArchivoBitacora" class="text-danger"></span>
                </div>

            </fieldset>

            <div class="form-group">
                <input type="submit" value="Enviar a Revisión" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}