<script>
    // Variable global traída de Razor
    var plazoDiasGlobal = @plazoDias;

    function toggleDiferimiento() {
        var chk = document.getElementById("chkAplicaDiferimiento");
        var panel = document.getElementById("panelDiferimiento");

        if (chk.checked) {
            panel.style.display = "block";
            calcularFechaFin(); // Calcular inmediatamente al abrir
        } else {
            panel.style.display = "none";
        }
    }

    function toggleCamposConvenio() {
        var tipo = document.getElementById("selectTipoAjuste").value;
        var divConvenio = document.getElementById("camposConvenio");

        if (tipo === "Convenio") {
            divConvenio.style.display = "block";
            calcularTotalConvenio();
        } else {
            divConvenio.style.display = "none";
        }
    }

    function calcularFechaFin() {
        var inputInicio = document.getElementById("fechaInicio").value;
        if (inputInicio) {
            var fecha = new Date(inputInicio + 'T00:00:00'); // Forzar zona horaria local
            // Sumar días
            fecha.setDate(fecha.getDate() + plazoDiasGlobal);

            // Formatear a YYYY-MM-DD
            var dia = ("0" + fecha.getDate()).slice(-2);
            var mes = ("0" + (fecha.getMonth() + 1)).slice(-2);
            var anio = fecha.getFullYear();

            document.getElementById("fechaFin").value = `${anio}-${mes}-${dia}`;
        }
    }

    function calcularTotalConvenio() {
        var base = parseFloat(document.getElementById("montoBase").value) || 0;
        var extra = parseFloat(document.getElementById("montoAdicional").value) || 0;
        var total = base + extra;
        document.getElementById("nuevoTotalConvenio").value = total.toFixed(2);
    }
</script>