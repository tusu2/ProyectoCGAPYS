@* Primero, declaramos el modelo que esta vista espera recibir del controlador. *@
@model ProyectoCGAPYS.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard de Control y Seguimiento";
    bool estaBloqueado = Model.KPIs.PresupuestoTotalAutorizado <= 0;
}
<style>
    /* 1. Clase para difuminar el contenido */
    .dashboard-blurred {
        filter: blur(8px); /* Un poco menos de blur para que se vea más elegante */
        pointer-events: none; /* Bloquea los clics */
        user-select: none; /* Bloquea la selección */
        opacity: 0.5; /* Un poco más transparente */
        transition: all 0.8s ease; /* Transición suave */
    }

    /* 2. Animación de entrada para la alerta */
    @@keyframes aparecerConRetraso {
        0% {
            opacity: 0;
            transform: translate(-50%, -60%); /* Empieza un poco más arriba */
        }

        100% {
            opacity: 1;
            transform: translate(-50%, -50%); /* Termina en el centro exacto */
        }
    }

    /* 3. Contenedor del mensaje de bloqueo (CORREGIDO) */
    .bloqueo-overlay {
        position: fixed;
        top: 50%;
        left: 50%; /* CENTRADO EXACTO: Antes estaba en 55% */
        transform: translate(-50%, -50%); /* Esto asegura que sea el centro matemático */

        z-index: 1050; /* Z-Index alto, pero cuidando no tapar el Navbar si este es mayor */

        text-align: center;
        background: rgba(255, 255, 255, 0.95); /* Fondo casi blanco sólido */
        padding: 50px 40px;
        border-radius: 25px;
        /* Sombra suave y elegante */
        box-shadow: 0 20px 50px rgba(0,0,0,0.15);
        border: 1px solid rgba(255,255,255,0.5);
        max-width: 450px;
        width: 90%;
        /* --- AQUÍ ESTÁ EL TRUCO DEL SPLASH --- */
        /* La animación tarda 0.8s en ejecutarse, PERO espera 2.5 segundos antes de empezar */
        /* Ajusta '2.5s' si tu splash dura más o menos tiempo */
        animation: aparecerConRetraso 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 2.5s backwards;
    }

    .bloqueo-icon {
        font-size: 60px; /* Ícono más grande */
        color: #ffc107;
        margin-bottom: 25px;
    }

    .bloqueo-texto {
        font-family: 'Segoe UI', sans-serif;
        font-size: 22px;
        font-weight: 700;
        color: #2c3e50;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 10px;
    }
</style>

<link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />
<div class="espaciador-escritorio">
    <br>
    <br>
    <br>
</div>

<h3 class="dashboard-title">@ViewData["Title"]</h3>

@if (estaBloqueado)
{
    <div class="bloqueo-overlay">
        <div class="bloqueo-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="bloqueo-texto">
            Inicio de año no puesto
        </div>
        <p class="text-muted mt-3">
            No se ha detectado un Presupuesto Autorizado para este año fiscal.
        </p>
    </div>
}
<div class="@(estaBloqueado ? "dashboard-blurred" : "")">


    <div class="row mb-4">
        <div class="col-12">
            <div class="glass-card filter-bar-container">

                <div class="filter-header">
                    <i class="fas fa-filter text-gold"></i>
                    <span class="filter-label">Filtros por Fondo:</span>
                </div>

                <div class="filter-options">

                    @* BUCLE DINÁMICO: Recorremos los fondos de la BD *@
                    @foreach (var fondo in Model.EstadoPorFondo)
                    {
                        @* Añadimos la clase 'custom-switch' para el estilo dorado *@
                        <div class="form-check form-switch custom-switch">
                            <input class="form-check-input filtro-fondo" type="checkbox" role="switch"
                                   id="filtro_@fondo.NombreFondo" value="@fondo.NombreFondo">

                            <label class="form-check-label" for="filtro_@fondo.NombreFondo">
                                @fondo.NombreFondo
                            </label>
                        </div>
                    }

                    @* Opción estática 'Ver Todos' *@
                    <div class="form-check form-switch custom-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="filtro_todos" checked>
                        <label class="form-check-label fw-bold" for="filtro_todos">
                            Ver Todos
                        </label>
                    </div>

                </div>
            </div>
        </div>
    </div>

@* --- FILA SUPERIOR: INFORMACIÓN FINANCIERA --- *@
<div class="row mb-4">

    @* 1. Presupuesto Autorizado *@
    <div class="col-lg-4 col-md-6 mb-4">
            <div class="glass-card kpi-card gold-border">
            <div class="kpi-title">Presupuesto Autorizado</div>
            @* Usamos una clase de texto azul para diferenciarlo *@
                <div class="kpi-number text-primary" id="kpi-autorizado">@Model.KPIs.PresupuestoTotalAutorizado.ToString("C")</div>
        </div>
    </div>

    @* 2. Presupuesto Contratado (NUEVO) *@
    <div class="col-lg-4 col-md-6 mb-4">
            <div class="glass-card kpi-card gold-border">
            <div class="kpi-title">Presupuesto Contratado</div>
                <div class="kpi-number" style="color: var(--color-warning);" id="kpi-contratado">@Model.KPIs.PresupuestoContratado.ToString("C")</div>
        </div>
    </div>

    @* 3. Monto Ejercido *@
    <div class="col-lg-4 col-md-6 mb-4">
            <div class="glass-card kpi-card gold-border">
            <div class="kpi-title">Monto Ejercido</div>
                <div class="kpi-number text-success" id="kpi-ejercido">@Model.KPIs.MontoTotalEjercido.ToString("C")</div>
        </div>
    </div>
</div>

@* --- FILA INFERIOR: BALANCE Y PROYECTOS --- *@
<div class="row mb-4">

    @* 4. Presupuesto Actual (Abajo del Autorizado) *@
    <div class="col-lg-4 col-md-6 mb-4">
            <div class="glass-card kpi-card blue-border">
            <div class="kpi-title">Presupuesto Actual</div>
                <div class="kpi-number text-info" id="kpi-disponible">@Model.KPIs.BalanceGeneralDisponible.ToString("C")</div>
        </div>
    </div>

    @* 5. Proyectos Totales (Sin el 2025) *@
    <div class="col-lg-4 col-md-6 mb-4">
            <div class="glass-card kpi-card blue-border">
            <div class="kpi-title">Proyectos Totales</div>
                <div class="kpi-number" id="kpi-total-proy">@Model.KPIs.ProyectosTotales</div>
        </div>
    </div>

    @* 6. Proyectos Activos *@
    <div class="col-lg-4 col-md-6 mb-4">
            <div class="glass-card kpi-card blue-border">
            <div class="kpi-title">Proyectos Activos</div>
                <div class="kpi-number" id="kpi-activos-proy">@Model.KPIs.ProyectosActivos</div>
        </div>
    </div>

</div>

<div class="row mb-4">
    <div class="col-lg-8 mb-4">
        <div class="glass-card chart-container">
            <h5>Distribución del Presupuesto</h5>
            <canvas id="donaPresupuesto" style="max-height: 350px;"></canvas>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="glass-card chart-container">
            <h5>Proyectos por Fase</h5>
            <canvas id="barrasProyectosFase" style="max-height: 350px;"></canvas>
        </div>
    </div>
</div>

    <div class="glass-card alert-list">
        <h5><i class="fas fa-exclamation-triangle"></i> Proyectos por Vencer</h5>
        <ul class="list-group list-group-flush" id="lista-proyectos-vencer">
            @if (!Model.ProyectosPorVencer.Any())
            {
                <li class="list-group-item" style="color: var(--color-text-secondary);">
                    ¡Todo en orden! No hay proyectos próximos a vencer.
                </li>
            }
            else
            {
                @foreach (var item in Model.ProyectosPorVencer)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            @* Icono de ERROR si hay conflicto de banderas *@
                            @if (item.EsConflicto == 1)
                            {
                                <i class="fas fa-bug text-danger me-1"
                                   data-bs-toggle="tooltip"
                                   title="ERROR: Este proyecto tiene múltiples fechas de prórroga activas simultáneamente (Convenio/Suspensión/Diferimiento).">
                                </i>
                            }

                            <a asp-controller="Proyectos" asp-action="Detalle" asp-route-id="@item.Id" asp-route-tab="resumen" class="fw-bold text-decoration-none">
                                @item.NombreProyecto
                            </a>
                            <div class="small text-muted">
                                Vence: @item.FechaVencimiento?.ToString("dd/MM/yyyy")
                            </div>
                        </div>

                        @* Badge con el color dinámico (Verde/Amarillo/Rojo) *@
                        <span class="badge @item.ClaseSemaforo rounded-pill">
                            @item.DiasTranscurridos días
                        </span>
                    </li>
                }
            }
        </>
    </div>






