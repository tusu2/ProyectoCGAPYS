                    async function startTypewriter(htmlContent, targetElement, speed) {
                        // 1. Parseamos el HTML en un div temporal
                        const tempDiv = document.createElement('div');
                tempDiv.innerHTML = htmlContent;

                        // 2. Procesamos cada nodo raíz (el <p> y el <ul>) uno por uno
                for (const node of tempDiv.childNodes) {
                    await processNode(node, targetElement, speed);
                        }
                    }

                    /**
                     * Función recursiva que procesa cada nodo (Elemento o Texto)
                     */
                    async function processNode(node, targetElement, speed) {
                        // Usamos un decodificador para manejar entidades HTML (como &nbsp; o acentos)
                        const decoder = document.createElement('textarea');

                if (node.nodeType === Node.TEXT_NODE) {
                            // --- Es un NODO DE TEXTO ---
                            // Decodificamos y escribimos caracter por caracter
             decoder.innerHTML = node.textContent;
                            const text = decoder.value;
                    for (let i = 0; i < text.length; i++) {
                 targetElement.innerHTML += text.charAt(i);
                                // Hacemos scroll para que se vea el texto mientras se escribe
                                targetElement.scrollTop = targetElement.scrollHeight;
                        await sleep(speed);
                            }
                } else if (node.nodeType === Node.ELEMENT_NODE) {
                            // --- Es un ELEMENTO (como <li>, <span>, <p>) ---
                            // 1. Creamos el nuevo elemento
                    const newNode = document.createElement(node.tagName);

                            // 2. Copiamos sus atributos (class, style, etc.)
                            node.getAttributeNames().forEach(attr => {
                                newNode.setAttribute(attr, node.getAttribute(attr));
                            });

                            // 3. Lo añadimos al DOM
                    targetElement.appendChild(newNode);

                            // 4. ¡RECURSIÓN! Procesamos los hijos de este nodo DENTRO del nuevo nodo
         for (const child of node.childNodes) {
             await processNode(child, newNode, speed);
                            }
                        }
                        // Ignoramos otros tipos de nodos (como comentarios)
                    }

            // 8. --- CSS PARA LA ANIMACIÓN "..." ---
            // (Lo inyectamos aquí para no tener que tocar Dashboard.css)
