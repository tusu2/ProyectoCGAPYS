@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // --- 4. LÓGICA DE FILTRADO DINÁMICO ---

            const filtrosFondo = document.querySelectorAll('.filtro-fondo');
            const filtroTodos = document.getElementById('filtro_todos');

            // Función para formatear dinero
            const formatMoney = (amount) => {
                return new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(amount);
            };

            // Función principal de actualización
            function actualizarDashboard() {
                // 1. Recopilar IDs seleccionados
                let seleccionados = [];
                if (!filtroTodos.checked) {
                    filtrosFondo.forEach(chk => {
                        if (chk.checked) seleccionados.push(chk.value);
                    });
                }

                const param = (filtroTodos.checked || seleccionados.length === 0) ? "todos" : seleccionados.join(',');

                document.body.style.cursor = 'wait';

                // 2. Llamada AJAX
                fetch(`/Dashboard/GetDashboardFiltered?fondos=${encodeURIComponent(param)}`)
                    .then(response => {
                        if (!response.ok) throw new Error("Error en la respuesta del servidor");
                        return response.json();
                    })
                    .then(data => {
                        console.log("Datos recibidos:", data); // <--- ÚTIL PARA DEPURAR

                        // A. ACTUALIZAR KPIs (Verificamos que data.kpis exista)
                        if (data.kpis) {
                            document.getElementById('kpi-autorizado').textContent = formatMoney(data.kpis.presupuestoTotalAutorizado);
                            document.getElementById('kpi-contratado').textContent = formatMoney(data.kpis.presupuestoContratado);
                            document.getElementById('kpi-ejercido').textContent = formatMoney(data.kpis.montoTotalEjercido);
                            document.getElementById('kpi-disponible').textContent = formatMoney(data.kpis.balanceGeneralDisponible);
                            document.getElementById('kpi-total-proy').textContent = data.kpis.proyectosTotales;
                            document.getElementById('kpi-activos-proy').textContent = data.kpis.proyectosActivos;

                            // B. ACTUALIZAR GRÁFICA DE DONA
                            // Aseguramos que donaChart existe antes de usarlo
                            if (typeof donaChart !== 'undefined') {
                                const totalE = data.kpis.montoTotalEjercido;
                                const totalC = Math.max(0, data.kpis.presupuestoContratado - totalE);
                                const totalD = data.kpis.balanceGeneralDisponible;

                                donaChart.data.datasets[0].data = [totalE, totalC, totalD];
                                donaChart.update();
                            }
                        }

                        // C. ACTUALIZAR GRÁFICA DE BARRAS
                        if (data.proyectosPorFase) {
                            const nuevosLabels = data.proyectosPorFase.map(f => f.fase);
                            const nuevosDatos = data.proyectosPorFase.map(f => f.totalProyectos);

                            // Intentamos usar la variable, si falla, buscamos la instancia por ID
                            let chartBarra = null;
                            if (typeof barrasFaseChart !== 'undefined') {
                                chartBarra = barrasFaseChart;
                            } else {
                                chartBarra = Chart.getChart("barrasProyectosFase");
                            }

                            if (chartBarra) {
                                chartBarra.data.labels = nuevosLabels;
                                chartBarra.data.datasets[0].data = nuevosDatos;
                                chartBarra.update();
                            } else {
                                console.error("No se encontró la gráfica de barras para actualizar.");
                            }
                        }

                        // D. ACTUALIZAR LISTA
                        const listaUl = document.getElementById('lista-proyectos-vencer');
                        if (listaUl && data.proyectosPorVencer) {
                            listaUl.innerHTML = '';
                            if (data.proyectosPorVencer.length === 0) {
                                listaUl.innerHTML = '<li class="list-group-item text-muted">¡Todo en orden! No hay proyectos próximos a vencer.</li>';
                            } else {
                                data.proyectosPorVencer.forEach(p => {
                                    const li = `
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                 <div>
                                                    <span class="fw-bold">${p.nombreProyecto}</span>
                                                    <div class="small text-muted">Vence: ${p.fechaVencimiento}</div>
                                                 </div>
                                                 <span class="badge ${p.claseSemaforo} rounded-pill">
                                                    ${p.diasRestantes} días
                                                 </span>
                                            </li>`;
                                    listaUl.innerHTML += li;
                                });
                            }
                        }
                        document.body.style.cursor = 'default';
                    })
                    .catch(err => {
                        console.error("Error AJAX:", err);
                        document.body.style.cursor = 'default';
                        // Opcional: mostrar alerta al usuario
                        // alert("Error al filtrar datos. Revisa la consola.");
                    });
            }

            // Event Listeners para los Checkboxes
            filtrosFondo.forEach(chk => {
                chk.addEventListener('change', () => {
                    // Si selecciono uno específico, desmarco "Todos"
                    if (chk.checked) filtroTodos.checked = false;

                    // Si desmarco todos los específicos, marco "Todos" automáticamente
                    const algunoActivo = Array.from(filtrosFondo).some(c => c.checked);
                    if (!algunoActivo) filtroTodos.checked = true;

                    actualizarDashboard();
                });
            });

            filtroTodos.addEventListener('change', () => {
                if (filtroTodos.checked) {
                    // Si marco "Todos", desmarco los específicos
                    filtrosFondo.forEach(chk => chk.checked = false);
                    actualizarDashboard();
                } else {
                    // Si desmarco "Todos" manualmente y no hay nada más, lo vuelvo a marcar (no permitir vacío total)
                    const algunoActivo = Array.from(filtrosFondo).some(c => c.checked);
                    if (!algunoActivo) filtroTodos.checked = true;
                }
            });
            // --- Configuración Global de Chart.js ---
            Chart.defaults.color = '#0A2240';
            Chart.defaults.font.family = "'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif";
            // Reducimos la animación para que el cambio se sienta instantáneo
            Chart.defaults.animation.duration = 500;

            // --- Colores y Gradientes ---
            const createGradient = (ctx, colorStart, colorEnd) => {
                const gradient = ctx.createLinearGradient(0, 0, 0, 400);
                gradient.addColorStop(0, colorStart);
                gradient.addColorStop(1, colorEnd);
                return gradient;
            };

            const customTooltip = {
                backgroundColor: 'rgba(10, 34, 64, 0.9)',
                titleColor: 'rgba(255, 255, 255, 0.9)',
                bodyColor: 'rgba(255, 255, 255, 0.8)',
                borderColor: 'rgba(212, 175, 55, 0.5)',
                borderWidth: 1,
                padding: 10,
                cornerRadius: 8,
                displayColors: false,
            };

            // --- 1. GRÁFICO DE DONA: Presupuesto General (VERSIÓN FINAL) ---
            // --- 1. GRÁFICO DE DONA: Lógica para que sume el Autorizado ---
            const ctxDona = document.getElementById('donaPresupuesto').getContext('2d');

            // 1. Obtenemos los valores crudos de la base de datos
            const totalEjercido = @Json.Serialize(Model.KPIs.MontoTotalEjercido);
            const totalContratado = @Json.Serialize(Model.KPIs.PresupuestoContratado);
            const totalDisponible = @Json.Serialize(Model.KPIs.BalanceGeneralDisponible);

            // 2. Calculamos las rebanadas para que no se dupliquen montos
            // Rebanada A: El dinero que ya salió (Ejercido)
            const sliceEjercido = totalEjercido;

            // Rebanada B: El dinero comprometido que AÚN NO sale (Contratado - Ejercido)
            // Usamos Math.max(0, ...) por si acaso hay algún error de datos para que no de negativo
            const sliceContratadoNeto = Math.max(0, totalContratado - totalEjercido);

            // Rebanada C: El dinero libre (Actual)
            const sliceDisponible = totalDisponible;

            // Definición de gradientes (Igual que antes)
            const gradientGold = createGradient(ctxDona, 'rgba(212, 175, 55, 1)', 'rgba(212, 175, 55, 0.7)');
            const gradientGrey = createGradient(ctxDona, 'rgba(108, 117, 125, 1)', 'rgba(108, 117, 125, 0.7)'); // Color para Contratado
            const gradientBlue = createGradient(ctxDona, 'rgba(58, 124, 165, 1)', 'rgba(58, 124, 165, 0.7)'); // Color para Actual

            const donaChart = new Chart(ctxDona, {
                type: 'doughnut',
                data: {
                    labels: ['Monto Ejercido', 'Presupuesto Contratado (Por ejercer)', 'Presupuesto Actual'],
                    datasets: [{
                        label: 'Distribución',
                        data: [sliceEjercido, sliceContratadoNeto, sliceDisponible],
                        backgroundColor: [gradientGold, gradientGrey, gradientBlue],
                        borderColor: 'rgba(248, 249, 250, 1)',
                        borderWidth: 4,
                        borderRadius: 15,
                        spacing: 10,
                        hoverOffset: 15
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                usePointStyle: true,
                                padding: 20,
                                font: { family: "'Segoe UI', sans-serif", size: 12 }
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(255, 255, 255, 0.9)',
                            titleColor: '#1f2937',
                            bodyColor: '#1f2937',
                            borderColor: 'rgba(0,0,0,0.1)',
                            borderWidth: 1,
                            padding: 12,
                            boxPadding: 6,
                            usePointStyle: true,
                            callbacks: {
                                label: function (context) {
                                    // Mostramos el valor formateado en moneda
                                    let value = context.raw;
                                    return context.label + ': ' + value.toLocaleString('es-MX', { style: 'currency', currency: 'MXN' });
                                }
                            }
                        }
                    }
                },
                plugins: [{
                    id: 'textCenter',
                    beforeDraw: function (chart) {
                        var width = chart.width,
                            height = chart.height,
                            ctx = chart.ctx;

                        ctx.restore();
                        var fontSize = (height / 160).toFixed(2);
                        ctx.font = "bold " + fontSize + "em sans-serif";
                        ctx.textBaseline = "middle";
                        ctx.fillStyle = "#333";

                        // Calculamos el total real sumando las rebanadas (Debe ser igual al Autorizado)
                        var total = chart.config.data.datasets[0].data.reduce((a, b) => a + b, 0);
                        var text = "Total",
                            textX = Math.round((width - ctx.measureText(text).width) / 2),
                            textY = height / 2.3;

                        ctx.fillText(text, textX, textY);

                        var text2 = total.toLocaleString('es-MX', { style: 'currency', currency: 'MXN', maximumFractionDigits: 0 }),
                            text2X = Math.round((width - ctx.measureText(text2).width) / 2),
                            text2Y = height / 1.8;

                        ctx.font = "bold " + (fontSize * 0.8).toFixed(2) + "em sans-serif";
                        ctx.fillStyle = "#666";
                        ctx.fillText(text2, text2X, text2Y);
                        ctx.save();
                    }
                }]
            });

            // --- 2. GRÁFICO DE BARRAS: Estado por Fondos ---


            // --- 3. GRÁFICO DE BARRAS HORIZONTALES: Proyectos por Fase ---
            const ctxBarrasFase = document.getElementById('barrasProyectosFase').getContext('2d');
            const projectListModal = new bootstrap.Modal(document.getElementById('projectListModal'));

            new Chart(ctxBarrasFase, {
                type: 'bar',
                data: {
                    labels: @Json.Serialize(Model.ProyectosPorFase.Select(f => f.Fase)),
                    datasets: [{
                        label: 'Nº de Proyectos',
                        data: @Json.Serialize(Model.ProyectosPorFase.Select(f => f.TotalProyectos)),

                        // --- ESTAS SON LAS DOS LÍNEAS QUE RESTAURAN EL ESTILO ---
                        backgroundColor: createGradient(ctxBarrasFase, 'rgba(120, 120, 120, 0.8)', 'rgba(120, 120, 120, 0.5)'),
                        borderRadius: 8
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    onClick: (e, elements, chart) => {
                        if (elements.length === 0) return;

                        const index = elements[0].index;
                        const fase = chart.data.labels[index];
                        const totalProyectos = chart.data.datasets[0].data[index];

                        if (fase === 'Finalizado' && totalProyectos > 0) {
