@model IEnumerable<ProyectoCGAPYS.Models.Proyectos>

@{
    ViewData["Title"] = "Anteproyectos";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;900&display=swap" rel="stylesheet">

<link rel="stylesheet" href="~/css/AnteproyectoIndex.css" asp-append-version="true" />
<div class="container mt-5">

    <div class="mb-5">
        <h1 class="titulo-moderno">
            Tablero de Anteproyectos
        </h1>
        <p class="subtitulo-moderno">
            Gestiona y visualiza el estado de las solicitudes activas.
        </p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="grid-glass">
            @foreach (var item in Model)
            {
        
                var p = item.Prioridad?.ToLower() ?? "";

           
                string rgbColor = "46, 204, 113";
                string bgBadge = "linear-gradient(135deg, #2ecc71 0%, #27ae60 100%)";
                string icono = "bi-check-circle-fill";

                if (p.Contains("amarillo") || p.Contains("media"))
                {
                    rgbColor = "253, 185, 19"; 
                    bgBadge = "linear-gradient(135deg, #FDB913 0%, #FF6B00 100%)";
                    icono = "bi-star-fill";
                }
                else if (p.Contains("rojo") || p.Contains("alta"))
                {
                    rgbColor = "255, 75, 75"; 
                    bgBadge = "linear-gradient(135deg, #FF416C 0%, #FF4B2B 100%)";
                    icono = "bi-lightning-fill";
                }
                // -----------------------------------

                <div class="card-glass" style="--glow-color: @rgbColor;">

                    <div class="watermark-folio">
                        #@item.Folio
                    </div>

                    <div class="card-content">
                        <div class="d-flex justify-content-between align-items-start">
                            <span class="badge-capsula" style="background: @bgBadge;">
                                <i class="bi @icono"></i> @(item.Prioridad ?? "Normal")
                            </span>
                            <small class="text-muted fw-bold" style="font-size: 0.7rem;">
                                @item.FechaSolicitud?.ToString("dd MMM")
                            </small>
                        </div>

                        <h3 class="proyecto-titulo" title="@item.NombreProyecto">
                            @item.NombreProyecto
                        </h3>

                        <div class="datos-grid">
                            <div class="dato-item">
                                <i class="bi bi-geo-alt-fill"></i>
                                <span>@(item.Campus?.Nombre ?? "Sin Campus")</span>
                            </div>
                            <div class="dato-item">
                                <i class="bi bi-person-circle"></i>
                                <span class="text-truncate">
                                    @(item.UsuarioResponsable?.UserName ?? item.NombreResponsable ?? "Sin Asignar")
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-auto">
                        <a asp-action="Detalles" asp-route-id="@item.Id" class="btn-glass-action">
                            Ver Detalles <i class="bi bi-arrow-right-short" style="font-size:1.2rem;"></i>
                        </a>
                    </div>

                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5" style="opacity: 0.6;">
            <i class="bi bi-inbox" style="font-size: 4rem; color: var(--azul-corp);"></i>
            <h3 class="mt-3">No hay anteproyectos pendientes</h3>
            <p>¡Buen trabajo! Todo está al día.</p>
        </div>
    }
</div>