@model ProyectoCGAPYS.ViewModels.RegistroUsuarioViewModel

@{
    ViewData["Title"] = "Registrar Nuevo Empleado";
}


<link rel="stylesheet" href="~/css/RecursosHumanos.css" asp-append-version="true" />
<br>
<br>
<br>
<br>
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card-luxury">
                
                <h2 class="luxury-title">Registro de Talento</h2>
                <div class="gold-line"></div>

                <form asp-action="Crear" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="ejemplo@empresa.com" />
                        <label asp-for="Email">Correo Electrónico</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Contraseña" />
                                <label asp-for="Password">Contraseña</label>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirmar" />
                                <label asp-for="ConfirmPassword">Confirmar contraseña</label>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="871..." />
                        <label asp-for="PhoneNumber">Número de Celular</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <select asp-for="RolSeleccionado" class="form-select" asp-items="ViewBag.Roles">
                            <option value="" selected disabled>-- Selecciona un Rol --</option>
                        </select>
                        <label asp-for="RolSeleccionado">Rol Asignado</label>
                        <span asp-validation-for="RolSeleccionado" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-tech btn-lg">Registrar Usuario</button>
                        
                        <a asp-controller="Home" asp-action="Index" class="btn-cancel-text">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}