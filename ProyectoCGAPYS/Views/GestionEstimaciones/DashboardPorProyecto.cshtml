@model Dictionary<string, List<Estimaciones>>

@{
    ViewData["Title"] = "Dashboard: " + ViewBag.ProyectoNombre;

    // 1. Detectamos los roles
    bool esSupervisor = User.IsInRole("Supervisor");
    bool esJefa = User.IsInRole("Jefa") || User.IsInRole("Admin"); // Asumimos Jefa o Admin

    // 2. Variable para saber si mostramos el "Layout de Creación" (2 columnas)
    //    Esto aplica tanto si eres Supervisor como si eres Jefa, porque ambos pueden estimar.
    bool mostrarVistaCreacion = esSupervisor || esJefa;

    var columnas = new[] {
        "En Revisión Control Obra",
        "Aprobado (Pendiente Factura)",
        "En Trámite de Pago",
        "Pagada"
    };
}

<link rel="stylesheet" href="~/css/Estimaciones.css" asp-append-version="true" />

<br>
<br>
<br>

<div class="container-fluid">

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>¡Atención!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>¡Éxito!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.SLAStatus != "N/A")
    {
        string slaColor = "success"; // OK
        string slaIcon = "fa-check-circle";
        string slaMsg = $"Quedan {ViewBag.SLADias} días de SLA para la 1ra estimación.";

        if (ViewBag.SLAStatus == "Advertencia")
        {
            slaColor = "warning";
            slaIcon = "fa-exclamation-triangle";
            slaMsg = $"¡ATENCIÓN! Quedan {ViewBag.SLADias} días de SLA.";
        }
        else if (ViewBag.SLAStatus == "Vencido")
        {
            slaColor = "danger";
            slaIcon = "fa-calendar-times";
            slaMsg = $"SLA VENCIDO. Han pasado {ViewBag.SLADias * -1} días. En 10 días se bloqueará.";
        }
        else if (ViewBag.SLAStatus == "Bloqueado")
        {
            slaColor = "dark";
            slaIcon = "fa-lock";
            slaMsg = "SLA Incumplido. El proyecto está en riesgo de bloqueo.";
        }

        <div class="alert alert-@slaColor d-flex align-items-center" role="alert">
            <i class="fas @slaIcon fa-2x me-3"></i>
            <div>
                <strong>Gestión de Plazo (SLA):</strong> @slaMsg
            </div>
        </div>
    }
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="display-6">@ViewBag.ProyectoNombre</h2>
            <p class="lead text-muted mb-0">Folio: @ViewBag.ProyectoFolio</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Volver a Proyectos
        </a>
    </div>

    @* =========================================================================
    ESCENARIO A: VISTA DE CREACIÓN (SUPERVISOR Y JEFA)
    Formulario a la izquierda + Kanban a la derecha
    ========================================================================= *@

    <div class="alert alert-info">
        <h4>🔍 Diagnóstico de Finiquito</h4>
        <p><strong>Valor en Base de Datos (según Controlador):</strong> @ViewBag.YaExisteFiniquito</p>
        <p><strong>¿Es Verdadero?:</strong> @(ViewBag.YaExisteFiniquito == true ? "SÍ" : "NO")</p>
    </div>
    @if (mostrarVistaCreacion)
    {
        <div class="row">
            <div class="col-lg-4 col-md-5 mb-4">
                @if (ViewBag.EstaBloqueado == true)
                {
                    <div class="card shadow-sm border-danger h-100">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="fas fa-lock me-2"></i>Proyecto Bloqueado</h5>
                        </div>
                        <div class="card-body text-center">
                            <p class="lead">Este proyecto fue bloqueado por incumplimiento de SLA o por una acción administrativa.</p>
                            <p>No se pueden registrar nuevas estimaciones.</p>

                            @if (User.IsInRole("Jefa") || User.IsInRole("Admin"))
                            {
                                <div class="modal fade" id="modalDesbloquear" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="DesbloquearProyecto" asp-controller="Estimaciones" method="post">
                                                <div class="modal-header bg-warning">
                                                    <h5 class="modal-title">Desbloquear Proyecto</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="alert alert-secondary">
                                                        <i class="fas fa-info-circle me-2"></i>
                                                        Esta acción re-habilitará el formulario de creación de estimaciones y quedará registrada en la bitácora del proyecto.
                                                    </div>
                                                    <input type="hidden" name="proyectoId" value="@ViewBag.ProyectoId" />
                                                    <div class="mb-3">
                                                        <label for="comentario" class="form-label fw-bold">Motivo del Desbloqueo (Obligatorio):</label>
                                                        <textarea name="comentario" class="form-control" rows="4" placeholder="Especifique la razón del desbloqueo manual..." required></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                    <button type="submit" class="btn btn-warning">Confirmar Desbloqueo</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        

                        </div>
                    </div>
                }
                else if (ViewBag.YaExisteFiniquito == true)
                {
                    <div class="card shadow-sm border-warning h-100">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0"><i class="fas fa-lock me-2"></i>Cierre en Proceso</h5>
                        </div>
                        <div class="card-body text-center">
                            <i class="fas fa-flag-checkered fa-3x text-warning mb-3"></i>
                            <p class="lead fw-bold">Se ha generado el Finiquito.</p>
                            <p>Ya no es posible crear nuevas estimaciones porque existe una estimación final (Finiquito) en curso o pagada.</p>
                            <hr />
                            <small class="text-muted">Espere a que Tesorería realice el pago final para que el proyecto cambie a estado "Finalizado".</small>
                        </div>
                    </div>
                }

                else
                {
                    @* Mueve tu tarjeta de creación original AQUÍ DENTRO *@
                    <div class="card shadow-sm border-primary h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Nueva Estimación</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="CrearEstimacion" asp-controller="Estimaciones" method="post" enctype="multipart/form-data">

                                <input type="hidden" name="IdProyectoFk" value="@ViewBag.ProyectoId" />

                                <div class="form-group mb-3">
                                    <label class="fw-bold">Monto a Estimar</label>
                                    <input name="Monto" class="form-control" type="number" step="0.01" required />
                                </div>

                                <div class="form-group mb-3">
                                    <label class="fw-bold">Fecha de Corte</label>
                                    <input name="FechaEstimacion" class="form-control" type="date" required />
                                </div>

                                <div class="form-group mb-3">
                                    <label class="fw-bold">Descripción</label>
                                    <textarea name="Descripcion" class="form-control" rows="3" required></textarea>
                                </div>

                                <div class="form-check form-switch mb-3">
                                    <input type="checkbox" class="form-check-input" id="chkFiniquito" name="CheckFiniquitoManual" value="true">
                                    <label class="form-check-label fw-bold text-danger" for="chkFiniquito">
                                        Marcar como Última Estimación (Finiquito)
                                    </label>
                                </div>

                                <input name="ArchivoNumerosGeneradores" class="form-control" type="file" accept=".pdf" />
                                <input name="ArchivoReporteFotografico" class="form-control" type="file" accept=".pdf,.zip" />
                                <input name="ArchivoBitacora" class="form-control" type="file" accept=".pdf" />

                                <button type="submit" class="btn btn-primary">Crear</button>
                            </form>
                        </div>
                    </div>
                }
               
            </div>

            <div class="col-lg-8 col-md-7">
                <div class="row g-2 row-cols-1 row-cols-md-2 row-cols-xl-2">
                    @foreach (var estado in columnas)
                    {
                        var estimacionesEnEstado = Model.ContainsKey(estado) ? Model[estado] : new List<Estimaciones>();

                        <div class="col">
                            <div class="card shadow-sm h-100">
                                <div class="card-header bg-dark text-white text-center py-2">
                                    <h6 class="mb-0 small">@estado</h6>
                                    <span class="badge rounded-pill bg-secondary mt-1">@estimacionesEnEstado.Count</span>
                                </div>
                                <div class="card-body estimacion-columna p-2">
                                    @if (estimacionesEnEstado.Any())
                                    {
                                        foreach (var estimacion in estimacionesEnEstado)
                                        {
                                            <div class="card mb-2 estimacion-card border-0 shadow-sm">
                                                <div class="card-body p-2">
                                                    <h6 class="card-title mb-1 text-primary text-truncate" title="@estimacion.Descripcion">
                                                        @estimacion.Descripcion
                                                    </h6>
                                                    <p class="mb-1 small"><strong>Monto:</strong> @estimacion.Monto.ToString("C")</p>
                                                    <p class="mb-1 small"><strong>Fecha:</strong> @estimacion.FechaEstimacion.ToString("dd/MM/yyyy")</p>

                                                    @if (esSupervisor)
                                                    {
                                                        // Supervisor: VE pero NO TOCA
                                                        <button type="button" class="btn btn-xs btn-light text-muted w-100 mt-2 py-0 border" style="font-size: 0.8rem; cursor: not-allowed;" disabled>
                                                            En Proceso <i class="fas fa-lock ms-1"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                // Jefa (y otros con este layout): PUEDE REVISAR
                                                        <a asp-controller="Estimaciones" asp-action="Detalles" asp-route-id="@estimacion.Id" class="btn btn-xs btn-outline-dark w-100 mt-2 py-0" style="font-size: 0.8rem;">
                                                            Revisar <i class="fas fa-chevron-right ms-1"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted mt-4 small opacity-50">Vacío</div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    @* =========================================================================
    ESCENARIO B: VISTA COMÚN (OTROS ROLES SIN PERMISO DE CREAR)
    Solo ven el tablero extendido (sin formulario) y pueden entrar a ver detalles.
    ========================================================================= *@
    else
    {
        <div class="row g-3">
            @foreach (var estado in columnas)
            {
                var estimacionesEnEstado = Model.ContainsKey(estado) ? Model[estado] : new List<Estimaciones>();

                <div class="col-md-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">
                                @estado
                                <span class="badge bg-light text-dark ms-2">@estimacionesEnEstado.Count</span>
                            </h5>
                        </div>
                        <div class="card-body estimacion-columna p-2">
                            @if (estimacionesEnEstado.Any())
                            {
                                foreach (var estimacion in estimacionesEnEstado)
                                {
                                    <div class="card mb-2 estimacion-card">
                                        <div class="card-body p-3">
                                            <h6 class="card-title mb-1">@estimacion.Descripcion</h6>
                                            <p class="mb-1"><strong>Monto:</strong> @estimacion.Monto.ToString("C")</p>
                                            <p class="mb-0 small"><strong>Fecha:</strong> @estimacion.FechaEstimacion.ToString("dd/MM/yyyy")</p>

                                            <a asp-controller="Estimaciones" asp-action="Detalles" asp-route-id="@estimacion.Id" class="btn btn-sm btn-vip w-100 mt-2">
                                                Revisar
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-center text-muted p-3">No hay estimaciones en este estado.</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>

<style>
    .estimacion-columna {
        background-color: #f4f7f6;
        min-height: 400px;
        max-height: 600px;
        overflow-y: auto;
    }

    .estimacion-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-left: 3px solid #0d6efd !important;
    }

        .estimacion-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .btn-vip {
        background-color: #802434;
        color: white;
    }

        .btn-vip:hover {
            background-color: #5e1a26;
            color: white;
        }
</style>