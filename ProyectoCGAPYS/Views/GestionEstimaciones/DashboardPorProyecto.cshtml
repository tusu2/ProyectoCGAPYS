@model Dictionary<string, List<Estimaciones>>

@{
    ViewData["Title"] = "Dashboard: " + ViewBag.ProyectoNombre;

    // 1. Detectamos los roles
    bool esSupervisor = User.IsInRole("Supervisor");
    bool esJefa = User.IsInRole("Jefa") || User.IsInRole("Admin"); // Asumimos Jefa o Admin

    // 2. Variable para saber si mostramos el "Layout de Creación" (2 columnas)
    //    Esto aplica tanto si eres Supervisor como si eres Jefa, porque ambos pueden estimar.
    bool mostrarVistaCreacion = esSupervisor || esJefa;

    var columnas = new[] {
        "En Revisión Control Obra",
        "Aprobado (Pendiente Factura)",
        "En Trámite de Pago",
        "Pagada"
    };
}

<link rel="stylesheet" href="~/css/Estimaciones.css" asp-append-version="true" />

<br>
<br>
<br>

<div class="container-fluid">

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>¡Atención!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>¡Éxito!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.SLAStatus != "N/A")
    {
        string slaColor = "success";
        string slaIcon = "fa-check-circle";

        // Resumen del Art. 54 basado en la ley
        string resumenLegal = "Articulo 54.- Las estimaciones de los trabajos ejecutados se deberán formular con una periodicidad no mayor de un mes. El contratista deberá presentarlas a la residencia de obra dentro de los dos días naturales siguientes a la fecha de corte para el pago de las estimaciones que hubiere fijado la dependencia o entidad en el contrato, acompañadas de la documentación que acredite la procedencia de su pago; la residencia de obra para realizar la revisión y autorización de las estimaciones contará con un plazo no mayor de diez días naturales siguientes a su presentación. En el supuesto de que surjan diferencias técnicas o numéricas que no puedan ser autorizadas dentro de dicho plazo, éstas se resolverán e incorporarán en la siguiente estimación.";

        string slaMsg = "";

        // Lógica de estados
        if (ViewBag.SLAStatus == "Advertencia")
        {
            slaColor = "warning";
            slaIcon = "fa-exclamation-triangle";
            // Caso Advertencia: Negritas en la advertencia y días
            slaMsg = $"{resumenLegal} <strong>¡ATENCIÓN! Quedan {ViewBag.SLADias} días.</strong>";
        }
        else if (ViewBag.SLAStatus == "Vencido")
        {
            slaColor = "danger";
            slaIcon = "fa-calendar-times";
            // Caso Vencido: Negritas en el mensaje de vencimiento
            slaMsg = $"{resumenLegal} <strong>SLA VENCIDO. Han pasado {ViewBag.SLADias * -1} días del límite mensual.</strong>";
        }
        else if (ViewBag.SLAStatus == "Bloqueado")
        {
            slaColor = "dark";
            slaIcon = "fa-lock";
            // Caso Bloqueado
            slaMsg = $"SLA Incumplido. <strong>El proyecto está bloqueado</strong> por incumplimiento de la periodicidad mensual (Art. 54).";
        }
        else
        {
            // Caso Normal (OK): Negritas solo en los días restantes
            slaMsg = $"{resumenLegal} <strong>Quedan {ViewBag.SLADias} días</strong> para presentar la 1ra estimación.";
        }

            <div class="alert alert-@slaColor d-flex align-items-center shadow-sm" role="alert">
                <i class="fas @slaIcon fa-2x me-3"></i>
                <div>
                @* Usamos Html.Raw para que interprete las etiquetas <strong> *@
                    <strong>Gestión de Plazo (SLA):</strong> @Html.Raw(slaMsg)
                </div>
            </div>
    }
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="display-6">@ViewBag.ProyectoNombre</h2>
            <p class="lead text-muted mb-0">Folio: @ViewBag.ProyectoFolio</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Volver a Proyectos
        </a>
    </div>

    @* =========================================================================
    ESCENARIO A: VISTA DE CREACIÓN (SUPERVISOR Y JEFA)
    Formulario a la izquierda + Kanban a la derecha
    ========================================================================= *@

    @if (mostrarVistaCreacion)
    {
        <div class="row">
             <div class="col-lg-4 col-md-5 mb-4">
 
    @if (ViewBag.EstaBloqueado == true)
    {
        <div class="card shadow-sm border-danger h-100">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-lock me-2"></i>Proyecto Bloqueado</h5>
            </div>
            <div class="card-body text-center">
                <p class="lead">Este proyecto está bloqueado.</p>
                <p>No se pueden registrar nuevas estimaciones por incumplimiento de SLA o decisión administrativa.</p>
                
                @* Botón de Desbloqueo (Solo Jefas/Admin) *@
                @if (User.IsInRole("Jefa") || User.IsInRole("Admin"))
                {
                    <button type="button" class="btn btn-outline-danger mt-3" data-bs-toggle="modal" data-bs-target="#modalDesbloquear">
                        <i class="fas fa-key me-1"></i> Desbloquear Manualmente
                    </button>
                    
                    }
            </div>
        </div>
    }

    @* -----------------------------------------------------------------
       CASO 2: FINIQUITO EXISTENTE (Ya se marcó la última estimación)
       ----------------------------------------------------------------- *@
    else if (ViewBag.YaExisteFiniquito == true)
    {
        <div class="card shadow-sm border-warning h-100">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-flag-checkered me-2"></i>Cierre en Proceso</h5>
            </div>
            <div class="card-body text-center">
                <i class="fas fa-clipboard-check fa-3x text-warning mb-3"></i>
                <p class="lead fw-bold">Se ha generado el Finiquito.</p>
                <p>Ya no es posible crear nuevas estimaciones porque existe una estimación final en curso o pagada.</p>
                <hr />
                <small class="text-muted">Espere a que Tesorería realice el pago final.</small>
            </div>
        </div>
    }

    @* -----------------------------------------------------------------
       CASO 3: TODO OK -> MOSTRAR FORMULARIO NUEVO (Dinámico)
       ----------------------------------------------------------------- *@
    else
    {
        <div class="card shadow-sm border-primary h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Nueva Estimación</h5>
            </div>
            <div class="card-body">
                <form asp-action="CrearEstimacion" asp-controller="GestionEstimaciones" method="post" enctype="multipart/form-data">
                    
                    @* ID del Proyecto Oculto *@
                    <input type="hidden" name="IdProyectoFk" value="@ViewBag.ProyectoId" />

                    @* Monto *@
                    <div class="form-group mb-3">
                        <label class="fw-bold">Monto a Estimar</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input name="Monto" class="form-control" type="number" step="0.01" placeholder="0.00" required />
                        </div>
                    </div>

                    @* Fecha *@
                    <div class="form-group mb-3">
                        <label class="fw-bold">Fecha de Corte</label>
                        <input name="FechaEstimacion" class="form-control" type="date" required />
                    </div>

                    @* Descripción *@
                    <div class="form-group mb-3">
                        <label class="fw-bold">Descripción</label>
                        <textarea name="Descripcion" class="form-control" rows="3" placeholder="Describa los trabajos ejecutados..." required></textarea>
                    </div>

                    @* Checkbox Finiquito *@
                    <div class="form-check form-switch mb-3 p-3 bg-light rounded border">
                        <input type="checkbox" class="form-check-input" id="chkFiniquito" name="EsFiniquito" value="true">
                        <label class="form-check-label fw-bold text-danger" for="chkFiniquito">
                            Marcar como Última Estimación (Finiquito)
                        </label>
                        <div class="form-text small">Al marcar esto, se bloqueará la creación de futuras estimaciones.</div>
                    </div>

                    @* --- AQUÍ ESTÁ LA NUEVA SECCIÓN DINÁMICA --- *@
                    <div class="mb-3 border-top pt-3">
                        <label class="fw-bold mb-2"><i class="fas fa-paperclip me-1"></i>Documentación de Soporte</label>
                        <div class="alert alert-secondary py-1 px-2 mb-2" style="font-size: 0.85rem;">
                            <i class="fas fa-info-circle"></i> Adjunta Generadores, Fotos, Bitácora, etc.
                        </div>

                        <div id="contenedor-documentos">
                            <div class="row g-2 mb-2 fila-documento">
                                <div class="col-5">
                                    <input type="text" name="Etiquetas" class="form-control form-control-sm" placeholder="Etiqueta (Ej. Generadores)" required />
                                </div>
                                <div class="col-7">
                                    <input type="file" name="Archivos" class="form-control form-control-sm" required />
                                </div>
                            </div>
                        </div>

                        <button type="button" class="btn btn-sm btn-outline-primary w-100 dashed-border" onclick="agregarCampoDocumento()">
                            <i class="fas fa-plus me-1"></i> Agregar otro documento
                        </button>
                    </div>
                    @* ------------------------------------------- *@

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">Crear Estimación</button>
                    </div>

                </form>
            </div>
        </div>
    }
</div>

            <div class="col-lg-8 col-md-7">
                <div class="row g-2 row-cols-1 row-cols-md-2 row-cols-xl-2">
                    @foreach (var estado in columnas)
                    {
                        var estimacionesEnEstado = Model.ContainsKey(estado) ? Model[estado] : new List<Estimaciones>();

                        <div class="col">
                            <div class="card shadow-sm h-100">
                                <div class="card-header bg-dark text-white text-center py-2">
                                    <h6 class="mb-0 small">@estado</h6>
                                    <span class="badge rounded-pill bg-secondary mt-1">@estimacionesEnEstado.Count</span>
                                </div>
                                <div class="card-body estimacion-columna p-2">
                                    @if (estimacionesEnEstado.Any())
                                    {
                                        foreach (var estimacion in estimacionesEnEstado)
                                        {
                                            <div class="card mb-2 estimacion-card border-0 shadow-sm">
                                                <div class="card-body p-2">
                                                    <h6 class="card-title mb-1 text-primary text-truncate" title="@estimacion.Descripcion">
                                                        @estimacion.Descripcion
                                                    </h6>
                                                    <p class="mb-1 small"><strong>Monto:</strong> @estimacion.Monto.ToString("C")</p>
                                                    <p class="mb-1 small"><strong>Fecha:</strong> @estimacion.FechaEstimacion.ToString("dd/MM/yyyy")</p>

                                                    @if (esSupervisor)
                                                    {
                                                        // Supervisor: VE pero NO TOCA
                                                        <button type="button" class="btn btn-xs btn-light text-muted w-100 mt-2 py-0 border" style="font-size: 0.8rem; cursor: not-allowed;" disabled>
                                                            En Proceso <i class="fas fa-lock ms-1"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                // Jefa (y otros con este layout): PUEDE REVISAR
                                                        <a asp-controller="Estimaciones" asp-action="Detalles" asp-route-id="@estimacion.Id" class="btn btn-xs btn-outline-dark w-100 mt-2 py-0" style="font-size: 0.8rem;">
                                                            Revisar <i class="fas fa-chevron-right ms-1"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted mt-4 small opacity-50">Vacío</div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    @* =========================================================================
    ESCENARIO B: VISTA COMÚN (OTROS ROLES SIN PERMISO DE CREAR)
    Solo ven el tablero extendido (sin formulario) y pueden entrar a ver detalles.
    ========================================================================= *@
    else
    {
        <div class="row g-3">
            @foreach (var estado in columnas)
            {
                var estimacionesEnEstado = Model.ContainsKey(estado) ? Model[estado] : new List<Estimaciones>();

                <div class="col-md-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">
                                @estado
                                <span class="badge bg-light text-dark ms-2">@estimacionesEnEstado.Count</span>
                            </h5>
                        </div>
                        <div class="card-body estimacion-columna p-2">
                            @if (estimacionesEnEstado.Any())
                            {
                                foreach (var estimacion in estimacionesEnEstado)
                                {
                                    <div class="card mb-2 estimacion-card">
                                        <div class="card-body p-3">
                                            <h6 class="card-title mb-1">@estimacion.Descripcion</h6>
                                            <p class="mb-1"><strong>Monto:</strong> @estimacion.Monto.ToString("C")</p>
                                            <p class="mb-0 small"><strong>Fecha:</strong> @estimacion.FechaEstimacion.ToString("dd/MM/yyyy")</p>

                                            <a asp-controller="Estimaciones" asp-action="Detalles" asp-route-id="@estimacion.Id" class="btn btn-sm btn-vip w-100 mt-2">
                                                Revisar
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-center text-muted p-3">No hay estimaciones en este estado.</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>
<script>
    function agregarCampoDocumento() {
        var nuevaFila = `
            <div class="row g-2 mb-2 fila-documento align-items-center">
                <div class="col-5">
                    <input type="text" name="Etiquetas" class="form-control form-control-sm" placeholder="Etiqueta (Ej. Fotos)" required />
                </div>
                <div class="col-6">
                    <input type="file" name="Archivos" class="form-control form-control-sm" required />
                </div>
                <div class="col-1 text-end">
                    <button type="button" class="btn btn-danger btn-sm p-1" onclick="eliminarFila(this)" title="Quitar">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        `;
        document.getElementById("contenedor-documentos").insertAdjacentHTML('beforeend', nuevaFila);
    }

    function eliminarFila(boton) {
        boton.closest('.fila-documento').remove();
    }
</script>
<style>
    .estimacion-columna {
        background-color: #f4f7f6;
        min-height: 400px;
        max-height: 600px;
        overflow-y: auto;
    }

    .estimacion-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-left: 3px solid #0d6efd !important;
    }

        .estimacion-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .btn-vip {
        background-color: #802434;
        color: white;
    }

        .btn-vip:hover {
            background-color: #5e1a26;
            color: white;
        }
        .dashed-border {
        border-style: dashed !important;
    }
</style>